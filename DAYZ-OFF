  <!-- TAB 2: My Selections -->
  <div id="mySelectionsTab" class="hidden">
    <h2>My Selections</h2>
    <ul id="mySelectionsList"></ul>
    <h3>Update Name</h3>
    <div class="form-group">
      <input type="text" id="displayNameInput" placeholder="New name..." />
